@model IEnumerable<LibraryManagement2.Models.Member>
<div class="jumbotron2">
    @{
        ViewBag.Title = "Index";
    }

    <h2>Members</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Full name
            </th>
            <th>
                E-mail
            </th>
            <th>
                Phone number
            </th>
            <th>
                Membership Type
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MembershipType.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MemberID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MemberID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MemberID })
                </td>
            </tr>
        }

    </table>
    </div>